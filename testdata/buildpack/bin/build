#!/usr/bin/env bash

set -eo pipefail

platform_dir=$1
plan_dir=$2
layers_dir=$3

cat - > "plan${ID}.toml"
echo > "$plan_dir/dep${ID}-keep"
if [[ -f dep-replace ]]; then
  cat dep-replace > "$plan_dir/dep${ID}-replace"
fi

echo "STDOUT${ID}"
>&2 echo "STDERR${ID}"

if [[ -d buildpack${ID} ]]; then
  cp -a "buildpack${ID}/." "$layers_dir"
fi

cp -a "$platform_dir/env" "./env-buildpack${ID}"

if [[ -f skip-processes ]]; then
 exit 0
fi

cat > "$layers_dir/launch.toml" <<EOF
[[processes]]
type = "process${ID}-type"
command = "process${ID}-command"

[[processes]]
type = "override-type"
command = "process${ID}-command"
EOF